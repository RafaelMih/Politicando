extends ../layout

block content
    h1 Lista de Usuários
    hr
    if messages.info
        div(class="alert alert-success")
            p= messages.info

    if messages.error
        div(class="alert alert-danger")
            p= messages.error

    a(href="/usuario/cadastro" title="Cadastrar" class="btn btn-info") Cadastrar    
    br
    br
    table(class="table well")
        thead
            tr
                th ID:
                th Nome:
                th Login:
                th Senha:
                th Data:
                th 
        tbody
            each valor, i in lista
                tr
                    td #{valor._id}
                    td #{valor.nome}
                    td #{valor.login}
                    td #{valor.senha}
                    td #{valor.data_cad}
                    td
                        a(href="/usuario/editar/#{valor._id}" title="Editar" class="btn btn-info") 
                            span(class="glyphicon glyphicon-pencil")
                    td
                        a(href="/usuario/visualizar/#{valor._id}" title="Visualizar" class="btn btn-primary") 
                            span(class="glyphicon glyphicon-search")