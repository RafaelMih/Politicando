extends ../layout

block content
    h1 Editar Usuário
    hr
    br
    form(method="post", action="/usuario/editar/#{value._id}", role="form")
        input(type="hidden" name="_method" value="put")
        div(class="form-group")
            label Nome:
            input(type="text", name="nome" value="#{value.nome}" class="form-control")
        div(class="form-group")
            label Login:
            input(type="text", name="login" value="#{value.login}" class="form-control")
        input(type="submit", value="Atualizar", class="btn btn-info")
    br
    br
    a(href="/usuario" title="Voltar") Voltar